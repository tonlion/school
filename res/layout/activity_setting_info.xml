<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aeee"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/person_info"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#afff"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/pheader"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:src="@drawable/icon_switch_off" />

        <TextView
            android:id="@+id/pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/pheader"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/pmess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pname"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/pheader"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:text="@string/app_name" />
    </RelativeLayout>

    <TextView
        android:id="@+id/setting_change_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="#afff"
        android:drawableRight="@drawable/cc_arrow_right"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/change_pass"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/person_collection"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="#afff"
        android:drawableRight="@drawable/cc_arrow_right"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/person_collection"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="#afff"
        android:drawableRight="@drawable/cc_arrow_right"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/versions"
        android:id="@+id/versions"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="#afff"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/self_login"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/icon_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <Button
        android:id="@+id/setting_exit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/exit_btn"
        android:text="@string/user_out" />

</LinearLayout>